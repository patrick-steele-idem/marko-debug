{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "Polymer": true
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "prefer-arrow-callback": 0,
        "no-console": 0,
        "indent": [
            1,
            "tab"
        ],
        "space-in-parens": [
            1,
            "always"
        ],
        "array-bracket-spacing": [
            1,
            "always"
        ],
        "computed-property-spacing": [
            1,
            "always"
        ],
        "no-param-reassign": 0,
        "global-require": 0,
        "padded-blocks": 0,
        "max-len": 0
    }
}
